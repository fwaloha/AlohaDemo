<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!--以下两个设置隐藏actionbar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--设置默认textview及edittext字体-->
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>
        <item name="android:editTextStyle">@style/AppEditTextStyle</item>

        <!-- toolbar 返回键颜色  溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- 溢出菜单图标自定义,这里可以改右侧三个点的图标，点击出菜单项-->
        <!--<item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>-->

        <!--toolbar 右侧文字颜色及大小-->
        <item name="actionMenuTextColor">@color/bg_cyan</item> <!--  敲定颜色-->
        <item name="android:textSize">18sp</item> <!--  搞掂字体大小-->

        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>

    </style>
    
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">#714091</item>
    </style>

    <style name="AppTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="MyPopup_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="OverflowButtonStyle" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_plus</item>
    </style>

    <!--溢出菜单项背景颜色， 可以在xml中设置popuptheme-->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">#FFCC99</item>
    </style>

    <style name="OverflowMenuStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">#FFCC99</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">#0099CC</item>


    </style>
</resources>
