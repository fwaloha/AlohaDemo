<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wf.aloha.MainActivity">

    <TextView
        android:id="@+id/tv_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DownLoad"
        android:padding="8dp"
        android:background="@color/bg_cyan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rxjava" />

    <TextView
        android:id="@+id/tv_rxjava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxJava"
        android:padding="8dp"
        android:background="@color/bg_cyan"
        app:layout_constraintLeft_toLeftOf="@+id/tv_pdf"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pdf" />

    <TextView
        android:id="@+id/tv_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrofit Post"
        android:layout_marginRight="16dp"
        android:padding="8dp"
        android:background="@color/bg_cyan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_get"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/tv_get" />

    <TextView
        android:id="@+id/tv_get"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrofit GET"
        android:padding="8dp"
        android:background="@color/bg_cyan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pdf"
        app:layout_constraintTop_toTopOf="@+id/tv_pdf"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_pdf"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:background="@color/bg_cyan"
        android:padding="8dp"
        android:text="LOAD PDF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

</android.support.constraint.ConstraintLayout>
