<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.VideoActivity">

    <Button
        android:id="@+id/bt_music_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="musick start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_music_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="musick pause"
        app:layout_constraintLeft_toLeftOf="@id/bt_music_start"
        app:layout_constraintTop_toBottomOf="@id/bt_music_start" />

    <Button
        android:id="@+id/bt_music_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="music reset"
        app:layout_constraintLeft_toLeftOf="@id/bt_music_start"
        app:layout_constraintTop_toBottomOf="@id/bt_music_pause" />

    <Button
        android:id="@+id/bt_video_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="video_start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_video_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="video_pause"
        app:layout_constraintRight_toRightOf="@id/bt_video_start"
        app:layout_constraintTop_toBottomOf="@id/bt_video_start" />

    <Button
        android:id="@+id/bt_video_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="video reset"
        app:layout_constraintBottom_toBottomOf="@id/bt_music_reset"
        app:layout_constraintRight_toRightOf="@id/bt_video_start" />

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bt_music_reset" />

    <ImageView
        android:id="@+id/iv_first_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_music_reset" />
</android.support.constraint.ConstraintLayout>